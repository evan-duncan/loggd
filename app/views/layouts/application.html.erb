<!DOCTYPE html>
<html lang="<%= I18n.locale %>">
  <head>
    <title>Loggd</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="manifest" href="/manifest.json" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="theme-color" content="#50394f">
    <meta name="apple-mobile-web-app-capable" content="yes">
    <link rel="icon" sizes="192x192" href="<%= image_path('logo/color-192.png') %>">
    <link rel="apple-touch-icon" href="<%= image_path('logo/color-192.png') %>">
    <meta name="msapplication-square310x310logo" content="<%= image_path('logo/color-310.png') %>">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= controller_stylesheet %>
    <%= javascript_include_tag Ckeditor.cdn_url %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= controller_javascript %>
  </head>

  <body>
    <%= render 'layouts/navbar' %>
    <section class="container" id="content">
      <%= render 'layouts/alerts' %>
      <%= yield %>
    </section>
    <%= render 'layouts/footer' %>
  </body>
</html>

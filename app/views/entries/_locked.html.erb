<h1>Decrypt <%= @entry.title %></h1>

<%= form_for(@journal, local: true, url: decrypted_journal_entry_path(@journal), method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :password, 'Journal Password', autofocus: true %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Decrypt Entry', class: 'btn btn-success' %>
  </div>
<% end %>

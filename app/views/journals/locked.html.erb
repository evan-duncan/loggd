<h1>Unlock <%= @journal.name %></h1>

<%= form_for(@journal, local: true, url: unlock_journal_path(@journal), method: :post) do |f| %>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="actions">
    <%= f.submit 'Unlock Journal', class: 'btn btn-success' %>
  </div>
<% end %>

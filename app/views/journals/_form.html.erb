<%= form_with(model: journal, local: true) do |f| %>
  <% if journal.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(journal.errors.count, "error") %> prohibited this journal from being saved:</h2>

      <ul>
      <% journal.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :password %><span class="text-danger">*</span>&nbsp;<small class="text-danger">required if private</small>
    <%= f.password_field :password, class: 'form-control' %>
  </div>

  <div class="form-check">
    <%= f.check_box :public, class: 'form-check-input' %>
    <%= f.label :public, class: 'form-check-label'%>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>

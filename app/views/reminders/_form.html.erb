<%= form_with(model: reminder, local: true, url: [@journal, reminder]) do |f| %>
  <% if reminder.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(reminder.errors.count, "error") %> prohibited this reminder from being saved:</h2>

      <ul>
        <% reminder.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <fieldset class="form-group">
    <legend>Days</legend>
    <%= f.fields_for :days do |df| %>
      <div class="form-check">
        <%= df.check_box :monday %>
        <%= df.label :monday %>
      </div>
      <div class="form-check">
        <%= df.check_box :tuesday %>
        <%= df.label :tuesday %>
      </div>
      <div class="form-check">
        <%= df.check_box :wednesday %>
        <%= df.label :wednesday %>
      </div>
      <div class="form-check">
        <%= df.check_box :thursday %>
        <%= df.label :thursday %>
      </div>
      <div class="form-check">
        <%= df.check_box :friday %>
        <%= df.label :friday %>
      </div>
      <div class="form-check">
        <%= df.check_box :saturday %>
        <%= df.label :saturday %>
      </div>
      <div class="form-check">
        <%= df.check_box :sunday %>
        <%= df.label :sunday %>
      </div>
    <% end %>
  </fieldset>

  <div class="form-group">
    <%= f.label :local_time, 'Time' %>
    <%= f.time_select :local_time, ampm: true %>
  </div>

  <div class="form-group">
    <%= f.label :time_zone %>
    <%= f.time_zone_select :time_zone, ActiveSupport::TimeZone.us_zones %>
  </div>

  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
